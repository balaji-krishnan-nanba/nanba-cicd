{
  "branches": ["main"],
  "repositoryUrl": "https://github.com/balaji-krishnan-nanba/nanba-cicd",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": false },
          { "type": "ci", "release": false },
          { "scope": "no-release", "release": false }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "üöÄ Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "perf", "section": "‚ö° Performance Improvements" },
            { "type": "revert", "section": "‚è™ Reverts" },
            { "type": "refactor", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "docs", "section": "üìö Documentation", "hidden": false },
            { "type": "style", "section": "üíÑ Styles", "hidden": true },
            { "type": "chore", "section": "üîß Chores", "hidden": true },
            { "type": "test", "section": "‚úÖ Tests", "hidden": true },
            { "type": "build", "section": "üèóÔ∏è Build System", "hidden": true },
            { "type": "ci", "section": "üë∑ CI/CD", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to the Databricks Data Platform will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n\n<!-- generated by semantic-release -->"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version [${nextRelease.version}](${releases.filter(release => !!release.name)[0].url}) which has been released üöÄ",
        "failComment": "‚ùå The release from branch `${branch.name}` had failed due to the following errors:\n- ${errors.map(err => err.message).join('\\n- ')}",
        "releasedLabels": ["released<%= nextRelease.type === 'prerelease' ? `-${nextRelease.prerelease}` : '' %>"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}